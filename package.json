{
  "name": "AmazonHandmadeRN",
  "version": "10.0.2",
  "private": true,
  "devDependencies": {
    "babel-jest": "23.6.0",
    "detox": "^10.0.2",
    "fs-extra": "^6.0.1",
    "jest": "23.6.0",
    "metro-react-native-babel-preset": "^0.49.2",
    "mocha": "^5.2.0",
    "react-test-renderer": "16.5.0",
    "redux-immutable-state-invariant": "^2.1.0",
    "replace-in-file": "^3.4.0"
  },
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "apk": "cd android && ./gradlew assembleRelease",
    "rename": "node ./bin/rename.js",
    "start": "react-native start",
    "test": "jest",
    "test:e2e": "detox test -c ios.sim.debug"
  },
  "jest": {
    "preset": "react-native",
    "transform": {
      "^.+\\.js$": "<rootDir>/node_modules/react-native/jest/preprocessor.js"
    }
  },
  "detox": {
    "test-runner": "mocha",
    "specs": "e2e",
    "runner-config": "e2e/mocha.opts",
    "configurations": {
      "ios.sim.release": {
        "binaryPath": "ios/build/Build/Products/Release-iphonesimulator/AmazonHandmadeRN.app",
        "build": "export RCT_NO_LAUNCH_PACKAGER=true && xcodebuild -project ios/AmazonHandmadeRN.xcodeproj -UseNewBuildSystem=NO -scheme AmazonHandmadeRN -configuration Release -sdk iphonesimulator -derivedDataPath ios/build -quiet",
        "type": "ios.simulator",
        "name": "iPhone 7 Plus"
      },
      "ios.sim.debug": {
        "binaryPath": "ios/build/Build/Products/Debug-iphonesimulator/AmazonHandmadeRN.app",
        "build": "xcodebuild -project ios/AmazonHandmadeRN.xcodeproj -UseNewBuildSystem=NO -scheme AmazonHandmadeRN -configuration Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "type": "ios.simulator",
        "name": "iPhone 7 Plus"
      }
    }
  },
  "dependencies": {
    "native-base": "^2.8.1",
    "react": "16.5.0",
    "react-native": "0.57.1",
    "react-native-dropdownalert": "^3.7.0",
    "react-native-firebase": "^5.1.0",
    "react-native-image-crop-picker": "^0.21.3",
    "react-native-keyboard-aware-scrollview": "^2.0.0",
    "react-native-linear-gradient": "^2.4.3",
    "react-native-vector-icons": "^6.0.2",
    "react-navigation": "^2.18.2",
    "react-navigation-fluid-transitions": "^0.2.73",
    "react-navigation-props-mapper": "^0.3.0",
    "react-redux": "^5.1.1",
    "redux": "^4.0.1",
    "redux-logger": "^3.0.6",
    "redux-persist": "^5.10.0",
    "redux-thunk": "^2.3.0"
  },
  "rnpm": {
    "assets": [
      "./assets/fonts/",
      "./assets/images/"
    ]
  }
}
